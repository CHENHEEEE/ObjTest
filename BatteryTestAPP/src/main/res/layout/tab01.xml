<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/textwhite">

    <com.example.he.MyTools.ToggleButtonGroupTableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RG_brand"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@drawable/divider_vertical"
            android:showDividers="middle"
            android:dividerPadding="5dp">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="乔登"
                android:textColor="@drawable/radiobutton_text_selector"
                android:id="@+id/radio_qd"
                android:checked="false"
                android:button="@null"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/radiobutton_background_selector"
                android:padding="2dp"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="力神"
                android:textColor="@drawable/radiobutton_text_selector"
                android:id="@+id/radio_ls"
                android:checked="false"
                android:button="@null"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/radiobutton_background_selector"
                android:padding="2dp"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="锂动"
                android:textColor="@drawable/radiobutton_text_selector"
                android:id="@+id/radio_ld"
                android:checked="false"
                android:button="@null"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/radiobutton_background_selector"
                android:padding="2dp"
                />
        </TableRow>
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#BFBFBF"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@drawable/divider_vertical"
            android:showDividers="middle"
            android:dividerPadding="5dp">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="中航"
                android:textColor="@drawable/radiobutton_text_selector"
                android:id="@+id/radio_zh"
                android:checked="false"
                android:button="@null"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/radiobutton_background_selector"
                android:padding="2dp"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="其他"
                android:textColor="@drawable/radiobutton_text_selector"
                android:id="@+id/radio_other"
                android:checked="false"
                android:button="@null"
                android:gravity="center"
                android:textSize="18sp"
                android:background="@drawable/radiobutton_background_selector"
                android:padding="2dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </TableRow>
    </com.example.he.MyTools.ToggleButtonGroupTableLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colortab"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_city"
            />

        <com.example.he.MyTools.ToggleButtonGroupTableLayout
            android:id="@+id/RG_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TableRow
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:divider="@drawable/divider_vertical"
                android:showDividers="middle"
                android:dividerPadding="5dp">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="广州"
                    android:textColor="@drawable/radiobutton_text_selector"
                    android:id="@+id/radio_GZ"
                    android:checked="false"
                    android:button="@null"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:padding="2dp"
                    />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="东莞"
                    android:textColor="@drawable/radiobutton_text_selector"
                    android:id="@+id/radio_DG"
                    android:checked="false"
                    android:button="@null"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:padding="2dp"
                    />
            </TableRow>
        </com.example.he.MyTools.ToggleButtonGroupTableLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colortab"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_type"
            />

        <com.example.he.MyTools.ToggleButtonGroupTableLayout
            android:id="@+id/RG_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <TableRow
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:divider="@drawable/divider_vertical"
                android:showDividers="middle"
                android:dividerPadding="5dp">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="老化"
                    android:textColor="@drawable/radiobutton_text_selector"
                    android:id="@+id/radio_laohua"
                    android:checked="false"
                    android:button="@null"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:padding="2dp"
                    />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="特性"
                    android:textColor="@drawable/radiobutton_text_selector"
                    android:id="@+id/radio_texing"
                    android:checked="false"
                    android:button="@null"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:padding="2dp"
                    />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="评测"
                    android:textColor="@drawable/radiobutton_text_selector"
                    android:id="@+id/radio_pingce"
                    android:checked="false"
                    android:button="@null"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:background="@drawable/radiobutton_background_selector"
                    android:padding="2dp"
                    />
            </TableRow>
        </com.example.he.MyTools.ToggleButtonGroupTableLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colortab"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"/>

    <com.example.he.PullToRefresh.PullToRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <include layout="@layout/refresh_head"/>

        <com.example.he.PullToRefresh.PullableListView
            android:id="@+id/refresh_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:background="@null"/>

    </com.example.he.PullToRefresh.PullToRefreshLayout>

</LinearLayout>
