<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textView_eqmid"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="match_parent"
        android:text="1"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/pressed"
        android:paddingLeft="6dp"
    />
    <TextView
        android:id="@+id/textView_eqm"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:text="新威尔(20A)"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:layout_marginRight="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView_light_0"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView_light_1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView_light_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView_light_3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView_light_4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView_light_5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView_light_6"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView_light_7"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/gray"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



    


